{
  "name": "eslint-rule-explorer",
  "description": "A powerful CLI tool for exploring and analyzing ESLint rules in your projects.",
  "version": "0.1.3",
  "type": "module",
  "license": "Apache-2.0",
  "author": {
    "name": "sushichan044",
    "url": "https://github.com/sushichan044"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sushichan044/eslint-toolbox.git",
    "directory": "packages/eslint-rule-explorer"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "bin": {
    "eslint-rule-explorer": "bin/eslint-rule-explorer.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --max-warnings 0 --fix .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "build": "tsdown",
    "build:check": "pnpm run build && pnpm pack && attw"
  },
  "dependencies": {
    "@sushichan044/eslint-config-array-resolver": "workspace:^",
    "gunshi": "^0.27.0-alpha.8"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "catalog:build",
    "@biomejs/biome": "catalog:biome",
    "@eslint/core": "0.15.1",
    "@types/node": "24.1.0",
    "@typescript-eslint/utils": "^8.27.0",
    "@virtual-live-lab/eslint-config": "catalog:eslint",
    "@virtual-live-lab/tsconfig": "catalog:typescript",
    "eslint": "catalog:eslint",
    "eslint-plugin-react": "7.37.5",
    "fs-fixture": "catalog:test",
    "globals": "16.3.0",
    "publint": "catalog:build",
    "tsdown": "catalog:build",
    "typescript": "catalog:typescript",
    "typescript-eslint": "catalog:eslint",
    "unplugin-unused": "catalog:build",
    "vitest": "catalog:test"
  }
}
